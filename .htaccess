Options -Indexes

<FilesMatch "\.env$">
    Deny from all
</FilesMatch>

RewriteEngine on

# # SQL injection
RewriteCond %{QUERY_STRING} (\%27)|(\')|(\-\-)|(\%23)|(#)|(;)|((\b)(UNION|SELECT|INSERT|UPDATE|DELETE|DROP|WHERE|FROM|HAVING|OR|AND)(\b)) [NC,OR]

# # XSS (b√°sico)
RewriteCond %{QUERY_STRING} (<|>|%3C|%3E|script|alert|onerror|onload|svg|iframe|document\.cookie) [NC]

RewriteRule .* - [F]

php_flag display_startup_errors off
php_flag display_errors off
php_flag html_errors off
php_flag log_errors off